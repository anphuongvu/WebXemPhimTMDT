@model IEnumerable<Nhom3_WebXemPhim.Models.TaiKhoan>

@{
    ViewBag.Title = "Trang cảnh báo tài khoản";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="album py-5 bg-light">
    <div class="container">
        <div class="col-md-12">
            <h3>Cảnh báo tài khoản vi phạm</h3>
        </div>
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <svg class="bd-placeholder-img rounded-circle" width="140" height="140" role="img" aria-label="Placeholder: 140x140" preserveAspectRatio="xMidYMid slice" focusable="false">
                                    <title>Placeholder</title>
                                    <rect width="100%" height="100%" fill="#999" />
                                    <text x="10%" y="50%" fill="#000" dy=".3em">Avatar 140x140</text>
                                </svg>
                            </div>
                            <div class="col-md-6">
                                <p class="card-text">Tên tìa : @Html.DisplayFor(modelItem => item.Username)</p>
                                <p class="card-text">Loại tài khoản: @Html.DisplayFor(modelItem => item.LoaiTaiKhoan.TenLoaiTK)</p>
                                <p class="card-text">Lý do cảnh báo: Vi phạm điều 1.</p>
                            </div>
                            <div class="col-md-3">
                                <br />
                                <br />
                                <br />

                                <div class="btn-group">
                                    <button ="button" class="btn btn-sm btn-outline-secondary" onclick="location.href='@Url.Action("Delete", "TaiKhoans", new { id = item.MaTaiKhoan })';return false;">Xóa tài khoản</button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Lịch sử cảnh báo</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
