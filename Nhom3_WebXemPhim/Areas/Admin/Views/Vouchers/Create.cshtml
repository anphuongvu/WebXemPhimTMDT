@model Nhom3_WebXemPhim.Models.Voucher

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin:20px;">
    <h2 style="margin: 0 auto; text-align:center; font-weight:500; color:#f48f41">Thêm Voucher mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="MaVoucher">Mã voucher</label>
                @*@Html.LabelFor(model => model.MaVoucher, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaVoucher, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaVoucher, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="TenVoucher">Tên voucher</label>
                @*@Html.LabelFor(model => model.TenVoucher, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenVoucher, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenVoucher, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="DieuKien">Điều kiện</label>
                @*@Html.LabelFor(model => model.DieuKien, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DieuKien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DieuKien, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row" style="margin-left:2px">
                    <label class="control-label col-md-2" for="NgayApDung">Ngày áp dụng</label>
                    @*@Html.LabelFor(model => model.NgayApDung, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NgayApDung, new { @type = "date", @class = "datepicker", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayApDung, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row" style="margin-left:2px">
                    <label class="control-label col-md-2" for="NgayHetHan">Ngày hết hạn</label>
                    @*@Html.LabelFor(model => model.NgayHetHan, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.NgayHetHan, new { @type = "date", @class = "datepicker", htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgayHetHan, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row"  style="margin-left:2px">
                    <label class="control-label col-md-2" for="TrangThai">Trạng thái</label>
                    @*@Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.TrangThai)
                            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div> 
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-default" style="width: 90px; height: 30px; background-color: #f48f41; align-content: center; text-align: center; border-radius: 5px; margin: 20px 0; color:white;"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Index")
    </div>
</div>

