@model Nhom3_WebXemPhim.Models.Voucher

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div style="margin:20px;">
    <h2 style="margin: 0 auto; text-align:center; font-weight:500; color:#f48f41">Thông tin chi tiết</h2>

    <div>
        <h4>Voucher</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã Vourcher
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MaVoucher)
            </dd>
            <dt>
                Tên Voucher
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenVoucher)
            </dd>

            <dt>
                Điều kiện
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DieuKien)
            </dd>

            <dt>
