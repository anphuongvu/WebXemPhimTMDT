@model IEnumerable<Nhom3_WebXemPhim.Models.GoiPhim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách các gói hiện có</h2>

<div class="album bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-4">
                    <div class="card shadow-sm">
                        <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                            <title>Placeholder</title>
                            <rect width="100%" height="100%" fill="#55595c"></rect>
                            <text x="45%" y="45%" fill="#eceeef" dy=".3em">@Html.DisplayFor(modelItem => item.LoaiGoiPhim)</text>
                            <!-- <img src="imgs/poster1.jpg" width="100%"> -->
                        </svg>

                        <div class="card-body">
                            <p class="card-text">Giá gói: @Html.DisplayFor(modelItem => item.DonGia) VND</p>
                            <p class="card-text">Lợi ích: Bạn sẽ được tham gia gói VIP 1, miễn phí xem phím trong 1 tháng.</p>
                            <p class="card-text">Lượt mua: @Html.DisplayFor(modelItem => item.DonMuaGoiPhims.Count) lượt</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a class = "btn btn-sm btn-outline-secondary" href="/GoiPhims/Details/@Html.DisplayFor(modelItem => item.MaGoiPhim)">Mua</a>
                                </div>
                                <small class="text-muted">Thời hạn gói: 12/10/2022</small>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
