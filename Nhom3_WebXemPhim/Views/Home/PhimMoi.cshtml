@model IEnumerable<Nhom3_WebXemPhim.Models.Phim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
<div class="container-fluid pb-3">

    
    <div class="row">
        <div class="col-9">
            <h4>Danh sách phim</h4>
            <hr />
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="post col-5">
                        <div class="post-thumbnail"><a href="/Phims/Details/@Html.DisplayFor(modelItem => item.MaPhim)"><img src="/Areas/Admin/assets/img/@Html.DisplayFor(modelItem => item.HinhAnhPhim)" height="250px;" width="100%;"></a></div>
                        <div class="post-details">
                            <div class="post-meta d-flex justify-content-between">
                                <div class="date meta-last"> @Html.DisplayFor(modelItem => item.NamSanXuat.Value.Month) / @Html.DisplayFor(modelItem => item.NamSanXuat.Value.Year)</div>
                                <div class="category"><a href="#">@Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)</a></div>
                            </div>
                            <a href="/Phims/Details/@Html.DisplayFor(modelItem => item.MaPhim)" class="nav_link"><h6 style="color:black">@Html.DisplayFor(modelItem => item.TenPhim)</h6></a>
                            <footer class="post-footer d-flex align-items-center">
                                <div class="avatar">
                                    <svg class="bi me-2" width="2em" height="1em"><use xlink:href="#person" /></svg>
                                </div>
                                <a href="#" class="author d-flex align-items-center flex-wrap">

                                    <div class="title">
                                        <span>@Html.DisplayFor(modelItem => item.TenDienVien)</span>
                                    </div>
                                </a>
                                <div class="avatar">
                                    <svg class="bi me-2" width="2em" height="1em"><use xlink:href="#clock" /></svg>
                                </div>
                                <div class="title">
                                    <span>@Html.DisplayFor(modelItem => item.ThoiLuongPhim)</span>
                                </div>
                                <div class="avatar">
                                    <svg class="bi me-2" width="2em" height="1em"><use xlink:href="#eye" /></svg>
                                </div>
                                <div class="title">
                                    <span>@Html.DisplayFor(modelItem => item.LuotXem) </span>
                                </div>

                                <div class="avatar">
                                    <svg class="bi me-2" width="2em" height="1em"><use xlink:href="#chat" /></svg>
                                </div>
                                <div class="title">
                                    <span>@Html.DisplayFor(modelItem => item.BinhLuans.Count)</span>
                                </div>

                            </footer>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-3">
            @Html.Partial("_PartialSideView")
        </div>
    </div>
</div>

